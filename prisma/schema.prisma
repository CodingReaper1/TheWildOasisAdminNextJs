model Reservations {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  startDate    DateTime
  endDate      DateTime
  numNights    Int
  numGuests    Int
  cabinPrice   Int
  totalPrice   Int
  status       String
  hasBreakfast Boolean
  isPaid       Boolean
  observations String?
  extrasPrice  Int

  cabinId Int
  userId  String

  cabin Cabins @relation(fields: [cabinId], references: [id], onDelete: Cascade)
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Settings {
  id                   Int      @id @default(autoincrement())
  createdAt            DateTime @default(now())
  minimumBookingLength Int
  maxBookingLength     Int
  maxGuestsPerBooking  Int
  breakFastPrice       Int
}
